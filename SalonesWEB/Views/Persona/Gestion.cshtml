@model SalonesWEB.Models.Persona.PersonasModel

@{
    ViewData["Title"] = "Gestion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Gestion</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@

<nav class="navbar navbar-expand-sm navbar-light bg-light" style="margin-top:67px;">
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a data-toggle="tab" class="nav-link" href="#home1">Gestión Clientes</a>
            </li>

        </ul>
    </div>
</nav>
<div class="card o-hidden border-0 shadow-lg my-n2">
    <div class="tab-content">
        <br />
        @* Persona *@
        <div class="tab-pane active" id="home1">
            <form class="user" style="margin:2%">
                <div class="form-group row">
                    <div class="col-sm-3 mb-3 mb-sm-3" hidden>
                        <input type="number" class="form-control" id="id" name="id" placeholder="Id" required readonly>
                    </div>
                    <div class="col-sm-3 mb-3 mb-sm-3">
                        <label class="col-form-label" for="primerNombre"><span style="color:red">*</span>Primer Nombre</label>
                        <input type="text" class="form-control" id="primerNombre" name="primerNombre" placeholder="Nombre">
                    </div>
                    <div class="col-sm-3 mb-3 mb-sm-3">
                        <label class="col-form-label" for="segundoNombre"><span style="color:red">*</span>Segundo Nombre</label>
                        <input type="text" class="form-control" id="segundoNombre" name="segundoNombre" placeholder="Nombre">
                    </div>
                    <div class="col-sm-3 mb-3 mb-sm-3">
                        <label class="col-form-label" for="primerApellido"><span style="color:red">*</span>Primer Apellido</label>
                        <input type="text" class="form-control" id="primerApellido" name="primerApellido" placeholder="Nombre">
                    </div>
                    <div class="col-sm-3 mb-3 mb-sm-3">
                        <label class="col-form-label" for="segundoApellido"><span style="color:red">*</span>Segundo Apellido</label>
                        <input type="text" class="form-control" id="segundoApellido" name="segundoApellido" placeholder="Nombre">
                    </div>
                    <div class="col-sm-3 mb-3 mb-sm-3">
                        <label class="col-form-label" for="identificacion">Número Identidad</label>
                        <input type="text" class="form-control" id="identificacion" name="identificacion" placeholder="Número Identificacion" required>
                    </div>
                    <div class="col-sm-3 mb-3 mb-sm-3">
                        <label class="col-form-label" for="telefono">Telefono</label>
                        <input type="text" class="form-control" id="telefono" name="telefono" placeholder="Posición" required>
                    </div>
                    <div class="col-sm-3 mb-3 mb-sm-3">
                        <label class="col-form-label" for="idCiudad">Correo</label>
                        <input type="email" class="form-control" id="correo" name="correo" placeholder="Mail" required>
                    </div>
                    <div class="col-sm-3 mb-3 mb-sm-3">
                        <label class="col-form-label" for="idEquipo">Edad</label>
                        <select id="idEquipo" name="idEquipo" class="form-control bg-white collapse-inner" required style="width:100%;color:blue;">
                            <option value="" class="col-sm-3 mb-3 mb-sm-3">Seleccione Edad</option>
                        </select>
                    </div>
                    <div class="col-sm-3 mb-3 mb-sm-3">
                        <label class="col-form-label" for="idEquipo">Pais</label>
                        <select id="idEquipo" name="idEquipo" class="form-control bg-white collapse-inner" required style="width:100%;color:blue;">
                            <option value="" class="col-sm-3 mb-3 mb-sm-3">Seleccione el Pais </option>
                        </select>
                    </div>
                    <div class="col-sm-3 mb-3 mb-sm-3">
                        <label class="col-form-label" for="idEquipo">Departamento</label>
                        <select id="idEquipo" name="idEquipo" class="form-control bg-white collapse-inner" required style="width:100%;color:blue;">
                            <option value="" class="col-sm-3 mb-3 mb-sm-3">Seleccione el Departamento </option>
                        </select>
                    </div>
                    <div class="col-sm-3 mb-3 mb-sm-3">
                        <label class="col-form-label" for="idEquipo">Ciudad</label>
                        <select id="idCiudad" name="idCiudad" class="form-control bg-white collapse-inner" required style="width:100%;color:blue;">
                            <option value="" class="col-sm-3 mb-3 mb-sm-3">Seleccione el Ciudad</option>
                        </select>
                    </div>
                    <div class="col-sm-3 mb-3 mb-sm-3">
                        <label class="col-form-label" for="btnCrear">.</label>
                        <button type="button" class="form-control btn-secondary" id="btnCrear" placeholder="Guardar" style="background: #4e73df;font-size:15px;color:white;">Guardar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    var api = localStorage.getItem("api");
    var update = false;
    var id = "";
    var idEquipo = "";

    $(document).ready(function () {
        $("#idEquipo").select2();
        getPersona();
        DropList();
    });

    $("#btnCrear").click(function () {
        var idEquipo = $("#idEquipo").val();
        debugger
        var data = {
            id: id,
            nombre: $("#nombre").val(),
            numero: $("#numero").val(),
            posicion: $("#posicion").val(),
            documento: $("#documento").val(),
            idEquipo: idEquipo
        }
        var entidad = JSON.stringify(data);
        if (update == false) {
            $.ajax({
                url: `${api}/api/Personas/ListPersonas`,
                //method: 'Post',
                'type': 'POST',
                data: entidad,
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                },
                traditional: true,
                async: true,
                dataType: "JSON",
                success: function (ok) {

                    if (ok) {
                        toastr.success("success");
                    } else {
                        toastr.warning(ok.mensaje);
                    }
                },
                error: function (data) {
                   toastr.error("No pudimos completar tu solicitud!");
                }
            });
        }
        else if (id != "" && id != undefined && id != NaN) {
            $.ajax({
                url: `${api}/api/Personas/ListPersonas`,
                'type': 'PUT',
                data: entidad,
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                },
                traditional: true,
                async: true,
                dataType: "JSON",
                success: function (ok) {

                    if (ok) {
                        toastr.success("success");
                    } else {
                        toastr.warning(ok.mensaje);
                    }
                },
                complete: function () {

                },
                error: function (data) {
                    toastr.error("No pudimos completar tu solicitud!");
                }
            });
        }
        else {
            toastr.warning("selecciona una accion!");
        }
    });

    function getPersona() {

        id= '@ViewBag.idString';
        if (id != "" && id != undefined && id != NaN) {
            var uri = `${api}/api/Personas/ListPersonas`;
            var url = uri + '?' + $.param({ "id": id });
            $.ajax({
                url: url,
                type: 'get',
                success: function (data) {

                    $("#id").val("");
                    $("#nombre").val("");
                    $("#numero").val("");
                    $("#posicion").val("");
                    $("#documento").val("");
                    $("#idEquipo").val("");

                    if (data.response.ok) {
                        toastr.success(data.response.message);
                        update = true;

                        id=data.deportista.id;
                        $("#id").val(data.deportista.id);
                        $("#nombre").val(data.deportista.nombre);
                        $("#numero").val(data.deportista.numero);
                        $("#posicion").val(data.deportista.posicion);
                        $("#documento").val(data.deportista.documento);
                        idEquipo=data.deportista.idEquipo;
                        $("#idEquipo").val(data.deportista.idEquipo);

                    } else {
                        toastr.warning("No pudimos procesar su Solicitud!");
                    };
                },
                error: function (jQXHR) {
                   toastr.error('error, No pudimos procesar su Solicitud!');
                }
            });
        }
    };

    function DropList() {
        $.ajax({
            url: `${api}/api/Personas/ListPersonas`,
            method: 'get',
            traditional: true,
            async: true,
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            headers: {
                'Authorization': 'Bearer '
                    + localStorage.getItem("accessToken")
            },
            success: function (data) {
                $('#idEquipo').empty();
                debugger
                if (data.ok) {
                    $(data.equipos).each(function (i) {
                        debugger
                        $('#idEquipo').append($('<option>', {
                            value: data.equipos[i].id,
                            text: data.equipos[i].nombreEquipo,
                        }));
                    });
                    if (idEquipo!="") {
                        $("#idEquipo").val(idEquipo).trigger('change.select2');
                    }
                } else {
                    toastr.warning(data.mensaje);
                }
            },
            error: function (data) {
                toastr.error("error");
            }
        });
    }

</script>
